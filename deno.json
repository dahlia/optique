{
  "workspace": [
    "packages/*",
    "examples/*"
  ],
  "imports": {
    "@logtape/logtape": "jsr:@logtape/logtape@^1.2.2",
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/path": "jsr:@std/path@^1.1.1",
    "@types/node": "npm:@types/node@^20.19.9",
    "isomorphic-git": "npm:isomorphic-git@^1.36.1",
    "markdownlint-cli2": "npm:markdownlint-cli2@^0.20.0",
    "tsdown": "npm:tsdown@^0.13.0",
    "typescript": "npm:typescript@^5.8.3",
    "valibot": "jsr:@valibot/valibot@^1.1.0",
    "zod": "npm:zod@^4.0.0"
  },
  "unstable": [
    "temporal"
  ],
  "exclude": [
    ".claude/",
    ".github/",
    "docs"
  ],
  "fmt": {
    "exclude": [
      "*.md",
      "**/*.md",
      "*.yaml",
      "**/*.yaml",
      "*.yml",
      "**/*.yml"
    ]
  },
  "tasks": {
    "check-versions": "deno run --allow-read --allow-write scripts/check_versions.ts",
    "hongdown": "deno run -A npm:hongdown@0.1.1",
    "check": {
      "dependencies": [
        "check-versions"
      ],
      "command": "deno check && deno lint && deno fmt --check && deno task hongdown --check && deno publish --dry-run --allow-dirty"
    },
    "fmt": "deno fmt && deno task hongdown --write",
    "install": {
      "dependencies": [
        "hooks:install"
      ],
      "command": "deno cache packages/*/src/**/*.ts examples/*/src/**/*.ts && pnpm install"
    },
    "test": "deno test --allow-read --allow-write --allow-run --allow-env --allow-net --env-file=.env.test",
    "test:node": "pnpm run -r test",
    "test:bun": "pnpm run -r test:bun",
    "test-all": {
      "dependencies": [
        "check",
        "test",
        "test:node",
        "test:bun"
      ]
    },
    "hooks:install": "deno run --allow-read=deno.json,.git/hooks/ --allow-write=.git/hooks/ jsr:@hongminhee/deno-task-hooks",
    "hooks:pre-commit": {
      "dependencies": [
        "check"
      ]
    }
  }
}
